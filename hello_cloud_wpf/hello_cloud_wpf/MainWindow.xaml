<Window x:Class="hello_cloud_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hello_cloud_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <WrapPanel>
        <ListView Width="300" Height="400" Margin="12,13,10,0" Name="endpointListView" ItemsSource="{Binding Path=Endpoints}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Key}"/>
                        <TextBlock Text=" ("/>
                        <TextBlock Text="{Binding Value}"/>
                        <TextBlock Text=")"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </WrapPanel>
</Window>
