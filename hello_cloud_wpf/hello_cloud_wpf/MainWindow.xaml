<Window x:Class="HelloCloudWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloCloudWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10,10,10,10">
            <UniformGrid  Margin="0,0,0,10" Rows="1">
                <TextBox Margin="0,0,20,0"
                         Text="{Binding LocalEndpointName}"
                         FontFamily="consolas"/>
                <CheckBox Content="Advertising" 
                          Name="isAdvertising" 
                          Checked="isAdvertising_Checked" 
                          Unchecked="isAdvertising_Unchecked"/>
                <CheckBox Content="Discovering" 
                          Name="isDiscovering" 
                          Checked="isDiscovering_Checked" 
                          Unchecked="isDiscovering_Unchecked"/>
            </UniformGrid>
            <ListView Name="endpointListView" 
                      SelectionMode="Single"
                      FontFamily="consolas"
                      ItemsSource="{Binding Endpoints}"
                      SelectedItem="{Binding ActiveEndpoint}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text=" ("/>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text=")"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10,10">
            <StackPanel Orientation="Horizontal" Margin="10,10">
                <Label Content="ID:"/>
                <Label Content="{Binding ActiveEndpoint.Id}"/>
                <Label Content="Name:"/>
                <Label Content="{Binding ActiveEndpoint.Name}"/>
            </StackPanel>
            <UniformGrid Rows="1">
                <Button Content="Connect" Command="{Binding ActiveEndpoint.ConnectCommand}" Margin="10,10"/>
                <Button Content="Accept" Command="{Binding ActiveEndpoint.AcceptCommand}" Margin="10,10"/>
                <Button Content="Send" Command="{Binding ActiveEndpoint.SendCommand}" Margin="10,10"/>
            </UniformGrid>
            <StackPanel Orientation="Horizontal" Margin="10,10">
                <Label Content="State: "/>
                <Label Content="{Binding ActiveEndpoint.State}"/>
            </StackPanel>
            <ListView Margin="10,10"></ListView>
        </StackPanel>
    </Grid>
</Window>
